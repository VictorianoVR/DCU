@model ProyectoDCU.Models.UsuarioViewModel
<script>function validarFormulario() {
  var nombre = document.getElementById("name").value;
  var correo = document.getElementById("email").value;
  var celular = document.getElementById("phone").value;

  // Validar el campo Nombre
  if (nombre == "") {
    alert("El campo Nombre es obligatorio");
    return false;
  }

  // Validar el campo Correo
    if (!correo.includes(".")) {
    alert("El campo Correo es obligatorio");
    return false;
  }

  // Validar el campo Celular
  if (celular.length != 10) {
    alert("El campo Celular debe tener 10 números");
    return false;
  }

        return  alert("Usuario registrado");;
}  
</script>
<div class="containerr">
    <h1 class="h1">Registro de Usuario</h1>

  
    <form id="" asp-controller="Home" asp-action="PostUnete" method="post">

        <div class="form-group">
            <label for="photo">Foto:</label>
            @* <asp:FileUpload ID="fileUploadPhoto" runat="server" />
            <input type="file" id="photo" name="photo" accept="image/*" asp-for="@Model.Foto"> *@
            <input type="file" name="image">
        </div>

        @* <div class="form-group">
        <label for="id">ID:</label>
        <input type="text" id="id" name="id">
        </div> *@

        <div class="form-group">
            <label for="name">Nombre:</label>
            <input id="name" asp-for="@Model.Nombre">
        </div>

        <div class="form-group">
            <label for="email">Correo:</label>
            <input id="email"  asp-for="@Model.Correo">
        </div>

        <div class="form-group">
            <label for="phone">Teléfono:</label>
            <input id="phone"  asp-for="@Model.Celular">
        </div>
        
        <input onclick="return validarFormulario()" type="submit" value="Registrar">
       
    </form>
</div>